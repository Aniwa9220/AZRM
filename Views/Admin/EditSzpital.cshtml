@model AZRM2023v1.Models.SWD2.Szpital

@{
    ViewData["Title"] = "EditSzpital";
}

<h1>Edytuj Szpital</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSzpital" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idszpitala" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
    
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListaSzpitali">Wróć do Listy</a>
</div>

